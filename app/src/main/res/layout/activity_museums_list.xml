<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MuseumsList">

    <TextView
        android:id="@+id/txtMuseumListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="8dp"
        android:text="WORLD MUSEUMS"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="166dp"
        android:layout_marginLeft="166dp"
        android:layout_marginTop="37dp"
        android:text="Museums"
        android:textColor="#050505"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMuseumListTitle" />

    <Button
        android:id="@+id/buttonLouvre"
        android:layout_width="118dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:text="Louvre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMuseumListTitle"
        android:onClick="LouvreFun"/>

    <Button
        android:id="@+id/buttonChina"
        android:layout_width="118dp"
        android:layout_height="102dp"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="101dp"
        android:text="National Museum of China"
        app:layout_constraintStart_toEndOf="@+id/buttonLouvre"
        app:layout_constraintTop_toBottomOf="@+id/txtMuseumListTitle"
        android:onClick="ChinaFun"/>

    <Button
        android:id="@+id/buttonVatican"
        android:layout_width="101dp"
        android:layout_height="95dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="28dp"
        android:text="Vatican Museum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLouvre"
        android:onClick="VaticanFun"/>

    <Button
        android:id="@+id/buttonMetArt"
        android:layout_width="153dp"
        android:layout_height="92dp"
        android:layout_marginStart="71dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="26dp"
        android:text="Metropolitan Museum of Art"
        app:layout_constraintStart_toEndOf="@+id/buttonVatican"
        app:layout_constraintTop_toBottomOf="@+id/buttonChina"
        android:onClick="MetArtFun"/>

    <Button
        android:id="@+id/buttonBritish"
        android:layout_width="105dp"
        android:layout_height="76dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="24dp"
        android:text="British Museum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonVatican"
        android:onClick="BritishFun"/>

    <Button
        android:id="@+id/buttonNatGallery"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="31dp"
        android:text="National Gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBritish"
        android:onClick="NatGalleryFun"/>

    <Button
        android:id="@+id/buttonAmerican"
        android:layout_width="144dp"
        android:layout_height="97dp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="26dp"
        android:text="American Musuem of Natural History"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNatGallery"
        android:onClick="AmericanFun"/>

    <Button
        android:id="@+id/buttonTate"
        android:layout_width="139dp"
        android:layout_height="73dp"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="27dp"
        android:text="Tate Modern"
        app:layout_constraintStart_toEndOf="@+id/buttonBritish"
        app:layout_constraintTop_toBottomOf="@+id/buttonMetArt"
        android:onClick="TateFun"/>

    <Button
        android:id="@+id/buttonNaturalHistory"
        android:layout_width="146dp"
        android:layout_height="77dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="32dp"
        android:text="Natural History Musuem"
        app:layout_constraintStart_toEndOf="@+id/buttonNatGallery"
        app:layout_constraintTop_toBottomOf="@+id/buttonTate"
        android:onClick="NaturalHistoryFun"/>

    <Button
        android:id="@+id/buttonState"
        android:layout_width="144dp"
        android:layout_height="82dp"
        android:layout_marginStart="71dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="25dp"
        android:text="State Heritage Museum"
        app:layout_constraintStart_toEndOf="@+id/buttonAmerican"
        app:layout_constraintTop_toBottomOf="@+id/buttonNaturalHistory"
        android:onClick="StateFun"/>

</androidx.constraintlayout.widget.ConstraintLayout>